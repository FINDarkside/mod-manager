
/* UTIL */
.flexbox {
  display: flex;
}

.flexbox.vertical-align {
  align-items: center;
}

.flexbox-column {
  display: flex;
  flex-direction: column;
}

.flexbox-grow {
  flex-grow: 1;
}

.inline {
  display: inline;
}

.inline-block {
  display: inline-block;
  vertical-align: top;
}

.va--super {
  vertical-align: super;
}

.va--bottom {
  vertical-align: text-bottom;
}

.bold {
  font-weight: bold;
}

.of-hidden {
  overflow: hidden;
}

.absolute {
  position: absolute !important;
}

.relative {
  position: relative !important;
}

.primary-spacer-3 {
  width: 100%;
  height: 3px;
  background-color: var(--primary-color);
}

.nowrap-ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}